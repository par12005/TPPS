function custom_module_showCustomModuleForm_submit($form, &$form_state) {

    if ($form_state['values']['name'] == "") {

        form_set_error("name", "Name cannot be empty");
    }
    else {

        drupal_set_message("Hello, " . $form_state['values']['name'] . "!");
    }
}
