        5 => t('5'),
        6 => t('6'),
        7 => t('7'),
        8 => t('8'),
        9 => t('9'),
        10 => t('10'),
      ),
      '#default_value' => 1,
    );
      
      $form['species'] = array(
        '#type' => 'select',
        '#title' => t('Species'),
        '#options' => array(
          0 => '---Select a Species---',
          1 => 'Species 1',
          2 => 'Species 2',
          3 => 'Species 3',
